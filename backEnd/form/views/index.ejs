    <!-- #2 form validation  -->

    <h2>GET 요청</h2>
    <form action="/getForm" name="login1" method="get">
      <input
        type="text"
        name="id"
        placeholder="ID는 최소 3글자, 최대 8글자"
        minlength="3"
        maxlength="8"
        required
      />
      <input
        type="password"
        name="pw"
        placeholder="PW"
        minlength="3"
        required
      />
      <input type="email" name="email" placeholder="Email" required />
      <input
        type="number"
        name="grade"
        placeholder="GRADE"
        min="1"
        max="6"
        required
      />
      <button type="submit">제출</button>
    </form>

    <h2>POST 요청</h2>
    <form action="/postForm" name="login2" method="post">
      <!-- id : 대소문자, 한글, 숫자 / 4글자 이상 -->
      <!-- pw : 소문자, 숫자 / 8자리 이상 12자리 이하 -->
      <input
        type="text"
        name="id"
        placeholder="ID"
        pattern="([0-9a-zA-Z가-힣]){4,}"
        title="대소문자, 한글, 숫자를 포함하여 4글자 이상 작성해주세요"
        required
      />
      <input
        type="password"
        name="pw"
        placeholder="PW"
        pattern="([a-z0-9]){8,12}"
        title="소문자, 숫자로 8글자 이상 12글자 이하로 작성해주세요"
        required
      />
      <button type="submit">제출</button>
    </form>

